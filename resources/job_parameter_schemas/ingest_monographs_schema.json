{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Monographs schema",
    "description": "Used to validate ingest-monograph job parameters",
    "type": "object",
    "required": [
        "targets",
        "options"
    ],
    "additionalProperties": false,
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "path",
                    "metadata"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "press_code",
                            "zenon_id",
                            "title",
                            "authors"
                        ],
                        "properties": {
                            "press_code": {
                                "type": "string"
                            },
                            "zenon_id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "prefix": {
                                "type": "string",
                                "default": ""
                            },
                            "subtitle": {
                                "type": "string",
                                "default": ""
                            },
                            "abstract": {
                                "type": "string",
                                "default": ""
                            },
                            "date_published": {
                                "type": "string",
                                "default": ""
                            },
                            "authors": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["givenname", "lastname"],
                                    "additionalProperties": false,
                                    "properties": {
                                        "givenname": {
                                            "type": "string"
                                        },
                                        "lastname": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "required": [
                "ocr_options",
                "app_options"
            ],
            "additionalProperties": false,
            "properties": {
                "ocr_options": {
                    "type": "object",
                    "required": [
                        "do_ocr",
                        "ocr_lang"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "do_ocr": {
                            "type": "boolean"
                        },
                        "ocr_lang": {
                            "type": "string"
                        }
                    }
                },
                "app_options": {
                    "type": "object",
                    "required": [
                        "mark_done"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "mark_done": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}