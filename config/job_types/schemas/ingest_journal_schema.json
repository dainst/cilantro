{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Journal schema",
    "description": "Used to validate ingest-journal job parameters",
    "type": "object",
    "required": ["objects", "options"],
    "additionalProperties": false,
    "properties": {
        "objects": {
            "type": "object",
            "required": ["path"],
            "properties": {
                "path": {
                    "type": "string"
                }
            }
        },
        "options": {
            "type": "object",
            "required": ["ojs_metadata", "do_ocr", "keep_ratio", "nlp_params"],
            "additionalProperties": false,
            "properties": {
                "ojs_metadata": {
                    "type": "object",
                    "required": ["ojs_journal_code", "ojs_user", "auto_publish_issue",
                                 "default_publish_articles", "default_create_frontpage",
                                 "allow_upload_without_file"],
                    "additionalProperties": false,
                    "properties": {
                        "ojs_journal_code": {
                            "type": "string"
                        },
                        "ojs_user": {
                            "type": "string"
                        },
                        "auto_publish_issue": {
                            "type": "boolean"
                        },
                        "default_publish_articles": {
                            "type": "boolean"
                        },
                        "default_create_frontpage": {
                            "type": "boolean"
                        },
                        "allow_upload_without_file": {
                            "type": "boolean"
                        }
                    }
                },
                "do_ocr": {
                    "type": "boolean"
                },
                "do_nlp": {
                    "type": "boolean"
                },
                "ocr_lang": {
                    "type": "string"
                },
                "keep_ratio": {
                    "type": "boolean"
                },
                "nlp_params": {
                    "type": "object",
                    "required": ["lang"],
                    "additionalProperties": false,
                    "properties": {
                        "lang": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
