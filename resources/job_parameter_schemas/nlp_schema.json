{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Records schema",
    "description": "Used to validate nlp job parameters",
    "type": "object",
    "required": ["targets", "options"],
    "additionalProperties": false,
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "path"],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "properties": {
                "lang": {
                    "type": "string"
                },
                "tag_intervals": {
                    "type": "boolean"
                },
                "document_creation_time": {
                    "type": "string"
                }
            }
        }
    }
}
