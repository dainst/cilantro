{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Journal schema",
    "description": "Used to validate ingest-journal job parameters",
    "type": "object",
    "required": [
        "targets",
        "options"
    ],
    "additionalProperties": false,
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "path",
                    "metadata"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "volume",
                            "publishing_year",
                            "reporting_year",
                            "number",
                            "description"
                        ],
                        "properties": {
                            "volume": {
                                "type": "number"
                            },
                            "publishing_year": {
                                "type": "number"
                            },
                            "reporting_year": {
                                "type": "number"
                            },
                            "number": {
                                "type": "number"
                            },
                            "description": {
                                "type": "string"
                            },
                            "identification": {
                                "type": "string"
                            },
                            "zenon_id": {
                                "type": "string"
                            },
                            "ojs_journal_code": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "required": [
                "ojs_options",
                "ocr_options",
                "app_options"
            ],
            "additionalProperties": false,
            "properties": {
                "ojs_options": {
                    "type": "object",
                    "required": [
                        "default_create_frontpage"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "auto_publish_issue": {
                            "type": "boolean"
                        },
                        "default_create_frontpage": {
                            "type": "boolean"
                        }
                    }
                },
                "ocr_options": {
                    "type": "object",
                    "required": [
                        "do_ocr",
                        "ocr_lang"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "do_ocr": {
                            "type": "boolean"
                        },
                        "ocr_lang": {
                            "type": "string"
                        }
                    }
                },
                "app_options": {
                    "type": "object",
                    "required": [
                        "mark_solved"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "mark_solved": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}