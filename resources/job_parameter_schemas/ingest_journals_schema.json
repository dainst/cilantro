{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Journal schema",
    "description": "Used to validate ingest-journal job parameters",
    "type": "object",
    "required": [
        "targets",
        "options"
    ],
    "additionalProperties": false,
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "path",
                    "metadata"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "zenon_id",
                            "title",
                            "ojs_journal_code",
                            "articles"
                        ],
                        "properties": {
                            "zenon_id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "ojs_journal_code": {
                                "type": "string"
                            },
                            "volume": {
                                "type": "number"
                            },
                            "publishing_year": {
                                "type": "number"
                            },
                            "reporting_year": {
                                "type": "number"
                            },
                            "number": {
                                "type": "number"
                            },
                            "journal_name": {
                                "type": "string"
                            },
                            "articles": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "path",
                                        "zenon_id",
                                        "title",
                                        "authors",
                                        "abstracts"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "zenon_id": {
                                            "type": "string"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "pages": {
                                            "type": "string"
                                        },
                                        "authors": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "required": [
                                                    "givenname",
                                                    "lastname"
                                                ],
                                                "additionalProperties": false,
                                                "properties": {
                                                    "givenname": {
                                                        "type": "string"
                                                    },
                                                    "lastname": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "abstracts": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "required": [
                "ocr_options"
            ],
            "additionalProperties": false,
            "properties": {
                "ocr_options": {
                    "type": "object",
                    "required": [
                        "do_ocr",
                        "ocr_lang"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "do_ocr": {
                            "type": "boolean"
                        },
                        "ocr_lang": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}