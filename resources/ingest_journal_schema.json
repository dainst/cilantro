{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Journal schema",
    "description": "Used to validate ingest-journal job parameters",
    "type": "object",
    "required": ["metadata", "files", "parts", "nlp_params", "ojs_metadata", "do_ocr", "keep_ratio"],
    "properties": {
        "metadata": {
            "type": "object",
            "required": ["volume", "year", "number", "description",
                         "importFilePath", "identification"],
            "properties": {
                "volume": {
                    "type": "string"
                },
                "year": {
                    "type": "number"
                },
                "number": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "importFilePath": {
                    "type": "string"
                },
                "identification": {
                    "type": "string"
                }
            }
        },
        "files": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["file", "range"],
                "properties": {
                    "file": {
                        "type": "string"
                    },
                    "range": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 2
                    }
                }
            }
        },
        "parts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["metadata", "files"],
                "properties": {
                    "metadata": {
                        "type": "object",
                        "required": ["title", "author", "pages",
                                     "date_published", "language", "zenonId",
                                     "auto_publish", "create_frontpage"],
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "abstract": {
                                "type": "string"
                            },
                            "author": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["firstname", "lastname"],
                                    "properties": {
                                        "firstname": {
                                            "type": "string"
                                        },
                                        "lastname": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "pages": {
                            "type": "object",
                            "required": ["showndesc", "startPrint", "endPrint"],
                            "properties": {
                                "showndesc": {
                                    "type": "string"
                                },
                                "startPrint": {
                                    "type": "number"
                                },
                                "endPrint": {
                                    "type": "number"
                                }
                            }
                        },
                        "date_published": {
                            "type": "string"
                        },
                        "language": {
                            "type": "string"
                        },
                        "zenonId": {
                            "type": "string"
                        },
                        "auto_publish": {
                            "type": "boolean"
                        },
                        "create_frontpage": {
                            "type": "boolean"
                        }
                    },
                    "files": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "file": {
                                    "type": "string"
                                },
                                "range": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    },
                                    "minItems": 2
                                }
                            }
                        }
                    }
                }
            }
        },
        "nlp_params": {
            "type": "object",
            "required": ["lang", "operations"],
            "properties": {
                "lang": {
                    "type": "string"
                },
                "operations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                }
            }
        },
        "ojs_metadata": {
            "type": "object",
            "required": ["ojs_journal_code", "ojs_user", "auto_publish_issue",
                         "default_publish_articles", "default_create_frontpage",
                         "allow_upload_without_file"],
            "properties": {
                "ojs_journal_code": {
                    "type": "string"
                },
                "ojs_user": {
                    "type": "string"
                },
                "auto_publish_issue": {
                    "type": "boolean"
                },
                "default_publish_articles": {
                    "type": "boolean"
                },
                "default_create_frontpage": {
                    "type": "boolean"
                },
                "allow_upload_without_file": {
                    "type": "boolean"
                }
            }
        },
        "do_ocr": {
            "type": "boolean"
        },
        "keep_ratio": {
            "type": "boolean"
        }
    }
}
