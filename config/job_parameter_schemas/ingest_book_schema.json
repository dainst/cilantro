{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Book schema",
    "description": "Used to validate ingest-book job parameters",
    "type": "object",
    "required": ["objects", "options"],
    "additionalProperties": false,
    "properties": {
        "objects": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "path", "metadata"],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["title", "created", "author", "atom_id"],
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "created": {
                                "type": "string"
                            },
                            "author": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "atom_id": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "properties": {
                "do_ocr": {
                    "type": "boolean"
                },
                "ocr_lang": {
                    "type": "string"
                }
            }
        }
    }
}
