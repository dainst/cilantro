{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingest Records schema",
    "description": "Used to validate ingest-records job parameters",
    "type": "object",
    "required": [
        "targets",
        "options"
    ],
    "additionalProperties": false,
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "path",
                    "metadata"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "title",
                            "creators",
                            "atom_id"
                        ],
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "created": {
                                "type": "string"
                            },
                            "authors": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "notes": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "atom_id": {
                                "type": "string"
                            },
                            "reference_code": {
                                "type": "string"
                            },
                            "creators": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "dates": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            },
                            "level_of_description": {
                                "type": "string"
                            },
                            "extent_and_medium": {
                                "type": "string"
                            },
                            "repository": {
                                "type": "string"
                            },
                            "repository_inherited_from": {
                                "type": "string"
                            },
                            "scope_and_content": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "type": "object",
            "properties": {
                "do_ocr": {
                    "type": "boolean"
                },
                "ocr_lang": {
                    "type": "string"
                }
            }
        }
    }
}