{% set ns = namespace() %}
{% set ojs_metadata = additional_params['additional_params'] %}
{% set repo_dir = additional_params['os.environ']['REPOSITORY_DIR'] %}
<?xml version="1.0" encoding="UTF-8"?>
<mets:mets
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:mets="http://www.loc.gov/METS/"
    xmlns:mods="http://www.loc.gov/mods/v3"
    xmlns:dv="http://dfg-viewer.de/"
    xsi:schemaLocation="http://www.loc.gov/METS/ http://www.loc.gov/mets/mets.xsd
        http://www.loc.gov/mods/v3 http://www.loc.gov/standards/mods/v3/mods-3-2.xsd">

    <mets:metsHdr LASTMODDATE="{{datetime.utcnow().isoformat()}}">
        <mets:agent ROLE="CREATOR" TYPE="ORGANIZATION">
            <mets:name>Deutsches Archäologisches Institut</mets:name>
        </mets:agent>
    </mets:metsHdr>

    <mets:dmdSec ID="dmd001">
        <mets:mdWrap MIMETYPE="text/xml" MDTYPE="MODS">
            <mets:xmlData>
                <mods:mods>
                    <mods:titleInfo>
                        <mods:title>{{ojs_metadata['ojs_journal_code']}}</mods:title>
                    </mods:titleInfo>
                    {% for part in obj.get_parts() %}
                        {% for author_item in part.metadata['author'] %}
                            <mods:name type="personal">
                                <mods:displayForm>{{author_item['firstname']}} {{author_item['lastname']}}</mods:displayForm>
                                <mods:role>
                                    <mods:roleTerm authority="marcrelator" type="code">aut</mods:roleTerm>
                                    <mods:roleTerm type="text">Author</mods:roleTerm>
                                </mods:role>
                            </mods:name>
                        {% endfor %}
                    {% endfor %}
                </mods:mods>
            </mets:xmlData>
        </mets:mdWrap>
    </mets:dmdSec>

    <mets:amdSec ID="amd1">
        <mets:rightsMD ID="rights1">
            <mets:mdWrap MIMETYPE="text/xml" MDTYPE="OTHER" OTHERMDTYPE="DVRIGHTS">
                <mets:xmlData>
                    <dv:rights>
                        <dv:owner>Deutsches Archäologisches Institut</dv:owner>
                        <dv:ownerLogo>https://www.dainst.org/image/company_logo?img_id=11201</dv:ownerLogo>
                        <dv:ownerSiteURL>https://dainst.org</dv:ownerSiteURL>
                    </dv:rights>
                </mets:xmlData>
            </mets:mdWrap>
        </mets:rightsMD>
    </mets:amdSec>

    <mets:fileSec>
        <mets:fileGrp USE="DEFAULT">
            {% set ns.id_list = [] %}
            {% for part in obj.get_parts() %}
                {% set part_index = '%04d' | format(loop.index) %}
                {% for file_path in glob(part.get_representation_dir('jpg') + '/*.jpg')|sort() %}
                    {% set ns.id = "file_part_" + part_index|string + "_" + loop.index|string %}
                    {% set ns.id_list = ns.id_list + [ns.id] %}
                        <mets:file ID="{{ns.id}}" MIMETYPE="image/jpeg">
                             {% set new_file_path = server_url + 'repository/file/' + obj.metadata.ojs_id + file_path.split('parts')[1] %}
                            <mets:FLocat LOCTYPE="URL" xlink:href="{{new_file_path}}"/>
                        </mets:file>
                {% endfor %}
            {% endfor %}
        </mets:fileGrp>
        <mets:fileGrp USE="THUMBS">
            {% for part in obj.get_parts() %}
                {% set part_index = '%04d' | format(loop.index) %}
                {% for file_path in glob(path_join(part.get_representation_dir('jpg'), 'thumbnails') + '/*.jpg')|sort() %}
                    {% set ns.id = "file_part_" + part_index|string + "_" + loop.index|string %}
                        <mets:file ID="thumb_{{ns.id}}" MIMETYPE="image/jpeg">
                            {% set new_file_path = server_url + 'repository/file/' + obj.metadata.ojs_id + file_path.split('parts')[1] %}                            <mets:FLocat LOCTYPE="URL" xlink:href="{{new_file_path}}"/>
                        </mets:file>
                {% endfor %}
            {% endfor %}
        </mets:fileGrp>
        <mets:fileGrp USE="DOWNLOAD">
            <mets:file ID="PDF1" MIMETYPE="application/pdf">
                <mets:FLocat LOCTYPE="URL" xlink:href="{{path_join(repo_dir, obj.metadata.ojs_id, 'data', 'origin', 'merged.pdf')}}"/>
            </mets:file>
        </mets:fileGrp>
    </mets:fileSec>

    <mets:structMap TYPE="PHYSICAL">
        <mets:div ID="struct_phys_001" TYPE="physSequence">
            <mets:fptr FILEID="PDF1"/>
            {% for id in ns.id_list %}
                <mets:div ID="div{{loop.index}}" ORDER="{{loop.index}}" ORDERLABEL="{{loop.index}}" TYPE="page">
                    <mets:fptr FILEID="{{ns.id_list[loop.index - 1]}}"/>
                </mets:div>
            {% endfor %}
        </mets:div>
    </mets:structMap>

    <mets:structMap TYPE="LOGICAL">
        <mets:div ID="struct_log_001" DMDID="dmd001" ADMID="amd1" TYPE="contents">
            <mets:fptr FILEID="PDF1"/>
            {% for part in obj.get_parts() %}
                {% set part_index = '%04d' | format(loop.index) %}
                    <mets:div ID="struct_log_001_{{part_index}}" TYPE="article" LABEL="{{part.metadata['title']}}"></mets:div>
            {% endfor %}
        </mets:div>
    </mets:structMap>

</mets:mets>
